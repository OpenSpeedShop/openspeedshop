def generateSimpleBETopologyString():
    nodelist = getAllocatedNodesString().split(' ')
    
    topstring = nodelist[0] + ':0 =>\n  ' + nodelist[0] + ':1'

    for node in nodelist[1::1]:
        topstring += '\n  ' + node + ':0'
    
    topstring += ' ;'
    return topstring

